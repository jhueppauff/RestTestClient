<Window x:Class="RestTestClient.ResponseViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestTestClient"
        mc:Ignorable="d"
        Title="ResponseViewer" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TbxResponse" Margin="10,10,10,42" TextWrapping="Wrap" Text="TextBox"/>
        <Button x:Name="BtnClose" Content="Close" Margin="0,0,10,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="BtnClose_Click"/>

    </Grid>
</Window>
